<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body>
    <!-- Display the variable -->

    <%= name.toUpperCase() %>

    <!-- Conditional rendering-->
     <% if(name === 'Yupindra') { %>
        <h1>"Hello" <%= name %> </h1>
        <% } else { %>
        <h1>"Hello Guest"</h1>
        <% } %>

    <!-- Looping -->
    <% for (let i = 1 ; i <= 10; i++) { %>
        <h1> <%= i %> </h1>
    <% } %>

    <% var currentDate = new Date(); %>
    <%= currentDate %>
</body>
</html>